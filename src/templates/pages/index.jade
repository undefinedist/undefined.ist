extends ../layout
block additional_head_tags
block title
	| UNDEFINEDIST - UNDFND
block content
	include ../data/links

	.loader.js-loader-section
		.loader__finishing_overlay.js-loader-finishing-overlay
		.loader__container
			.loader__text_box__big_vertical_line
			.loader__text_box__big_horizontal_line_box
